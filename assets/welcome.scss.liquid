.confirm {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.logo img{
	width: 90px 
}

.welcome {
	color:#2091DD;
	font-size: 40px;
}

.label {
	color:#939493;
	font-size: 25px;
	font-weight:700;
	margin-top:-15px;
	text-transform: uppercase;
}

.text {
	margin-top:15px;
	width: 500px;
	background:#EEEEEE;
	padding: 20px;
}

.buttons {
	margin-top:35px;
	display: flex;
	justify-content: space-around;
	width:320px;
}

.buttons .btn {
	padding:8px 25px;
	text-transform: uppercase;
	border-radius: 2px;
}

.buttons .btn:hover {
    padding:10px 27px;
}

.btn.account {
	color:#868686;
	background:#C1C1C1;
}

.btn.account:hover {
    background:#D1D1D1; 
}