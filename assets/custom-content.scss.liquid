.cstm {
	font-family:proxima-nova;
	display:flex;
	flex-direction:column;
	width:500px;
	line-height:1.1em
}

.cstm .row {
	display:flex;
	padding:2.5px 0px
}

.cstm .block {
	flex:1;
	padding:5px
}

.cstm .header {
	font-size: 39px;
	font-family: freight-sans-pro;
	padding-bottom: 10px;
}

.cstm .block_label {
	font-weight:500;
	font-size:13px;
	color:#9CA0A6;
	text-transform:uppercase;
	margin-bottom:3px;
	letter-spacing:1.1px
}

.text_input input {
	width:100%;
	border-radius:0px;
	-webkit-appearance:none;
	-moz-appearance:none;
	background:#D8DEE6;
	border:solid 1px #D8DEE6;
	color:#444A51;
	height:34px;
	padding:0px 10px;
	font-size:17px;
	outline:none
}

.text_input input:focus {
	border:solid 2px #2198DA
}

.textarea_input textarea {
	width:100%;
	border-radius:0px;
	-webkit-appearance:none;
	-moz-appearance:none;
	background:#D8DEE6;
	border:solid 1px #D8DEE6;
	color:#444A51;
	height:140px;
	padding:0px 10px;
	font-size:17px;
	outline:none;
    margin-bottom:0px;
}

.textarea_input textarea:focus {
	border:solid 2px #2198DA
}

