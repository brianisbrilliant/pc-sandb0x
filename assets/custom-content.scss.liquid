input[type=radio]+label {
	display:inline-block;
	width:70px;
	height:70px;
	line-height:24px
}

.animation_style {
	display:flex
}

.block_label.animation_style {
	justify-content:center
}

.animation_style .block {
	display:flex;
	flex-direction:column;
	align-items:center
}

.block.vr {
	flex:0;
	width:1px;
	background:#D4D6D9;
	height:70px;
	padding:1px;
	margin-top:30px
}

.block_content.submit {
    width:100%;
    color:#fff;
    background:#2198DA;
    font-weight:700;
    display:flex;
    justify-content:center;
    align-items:center;
    letter-spacing:.2em;
    text-transform:uppercase;
    font-size:24px;
    padding:18px;
  	cursor:pointer;
}

.block_content.submit:hover {
  	background:#1FCB91;
}

.block_content.submit:active {
  	align-self:center;
  	justify-self:center;
  	width:95%;
  	padding:16px;
}

