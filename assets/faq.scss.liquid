.faq div {
 display:inline-block;
 margin:0px;
}

.faq .title{
 font-family:open sans;
  font-size:25px;
  margin-bottom:10px;
  line-height:1.2em;
}

.faq .accordian {
 width:100%; 
}

.faq .section {
  background:#fff;
  margin: 5px 0px;
  display:block;
  width:100%;
  cursor:pointer;
  box-shadow: 1px 1px 5px grey;
}

.faq .head {
  width:100%; 
  font-weight:600;
  font-family:open sans;
  font-size:18px;
  color:#0061A4;
  padding:15px 15px 0px 15px;
  line-height:1.2em;
}

.faq .body{
  display:inline-block;
  padding-top:20px;
  border-top:solid 1px #AAA;
  color:#fff;
  overflow:hidden;
  line-height:1.5em;
  padding:10px 15px 15px 15px;
  background:#2293E1;
}

