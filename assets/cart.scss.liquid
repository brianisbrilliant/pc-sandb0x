#load_body {
  background:#ffffff; 
}

.white_background:after {
  width:100%;
  background:linear-gradient(to bottom, #b5b5b5 0%,#e5e5e5 100%);
  height:5px;
  top:100%;
  display:absolute;
}

.que {
  display:flex;
  flex-direction:column;
}

.dwn_q .header {
  font-family:proxima-nova; 
}

.title {
  display:inline-block;
  color:#104387;
  font-size:27px;
}

.cont_shopping {
  .que {
  display:flex;
  flex-direction:column;
}margin-left
  :15px;
  font-size:17px;
  display:inline-block;
}

.download_item {
  display:flex;
  flex-direction:row;
  height:5vw;
  background:#DDDDDD;
}

.x_btn {
  background:url({{ 'download-x.png' | asset_url }});
  background-size: 35%;
  background-repeat: no-repeat;
  background-position: center;
  width:65px;
}

.x_btn:hover {
  background:url({{ 'download-x-active.png' | asset_url }});
  background-size: 35%;
  background-repeat: no-repeat;
  background-position: center;
}

.item_pic {
  width:9.25vw;
}

.item_pic img {
  max-width:100%;
  width:100%;
  height:100%;
}

.item_title {
  flex:1;
  padding:0px 0px 0px 10px;
  font-family:"proxima-nova";
  font-weight:600;
  justify-content:center;
  align-items:left;
  display: flex;
  flex-direction:column;
  font-size: 22px;
  line-height: .9em;
}

.item_title > div {
  position:relative;
  top:-3px;
}

.title_label {
  font-family:"proxima-nova";
  font-weight:600;
  letter-spacing:1.2;
  font-size:12px;
  color:#2094E0;
  margin-bottom: -2px;
}

.item_matrix {
  flex:1;
  display: flex;
  align-items: center;
}

.item_matrix input {
  margin:0px; 
  width:125px;
}

.item_matrix img {
  -webkit-filter: grayscale(100%) opacity(50%); /* Safari 6.0 - 9.0 */
  filter: grayscale(100%) opacity(50%);
  width:12px;
  max-width:initial;
  margin: 0px 3px;
} 

.item_ext {
  width:100px;
  display:flex;
  align-items:center;
  justify-content:center;
}
.item_ext select{
  margin:0px;  
  width:initial;
}

.item_dwn {
  display:flex;
  justify-content:center;
  align-items:center;
  width: 100px;
  background:#1FC09F;
  cursor:pointer;
}

.item_dwn:hover {
  background:#1F9CD2; 
}

.item_dwn:active {
  background:#1777A1; 
}

.item_dwn img {
  max-width:100%;
  height:48px;
  width:33%x;
}